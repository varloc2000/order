        <script src="{{ asset('bundles/allbysirtrevor/components/underscore/underscore-min.js') }}"></script>
        <script src="{{ asset('bundles/allbysirtrevor/sir-trevor-js/sir-trevor.js') }}"></script>
        <script src="{{ asset('bundles/allbysirtrevor/js/htmlparser.min.js') }}"></script>
        <script src="{{ asset('bundles/allbysirtrevor/js/html2json.js') }}"></script>
        <script src="{{ asset('bundles/allbysirtrevor/js/main.js') }}"></script>

        <script>
