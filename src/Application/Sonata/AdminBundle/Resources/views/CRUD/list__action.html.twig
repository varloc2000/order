{% extends admin.getTemplate('base_list_field') %}

{% block field %}
    {% for actions in field_description.options.actions %}

        {#Check which button have to be displayed 'recover' or 'delete'#}
        {% if
            object.isActive is defined
            and object.isActive == 1
            and actions.template == 'SonataAdminBundle:CRUD:list__action_recover.html.twig'
            or object.isActive is defined
            and object.isActive == 0
            and actions.template == 'SonataAdminBundle:CRUD:list__action_delete.html.twig'
        %}
            {#do not display button#}
        {% else %}
            {% include actions.template %}
        {% endif %}

    {% endfor %}
{% endblock %}